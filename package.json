{
  "name": "@ldesign/benchmark",
  "version": "0.2.0",
  "description": "统一的性能测试框架 - LDesign Benchmark Framework",
  "keywords": [
    "benchmark",
    "performance",
    "testing",
    "ldesign"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "ldbench": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "tinybench": "^2.9.0",
    "globby": "^14.0.0",
    "chokidar": "^4.0.0",
    "cac": "^6.7.14",
    "yaml": "^2.7.0",
    "ajv": "^8.17.1",
    "sql.js": "^1.12.0"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^4.0.13",
    "@vitest/ui": "^4.0.13",
    "eslint": "^9.18.0",
    "fast-check": "^4.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.3",
    "vitest": "^4.0.13"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/poly1603/ldesign-benchmark.git"
  }
}
